<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB">

    <!-- ✅ 고정 상단바 (스크롤뷰 밖) -->
    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/topbar"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back_button"
                android:contentDescription="뒤로가기"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/topBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 등록"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.35" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- ✅ 스크롤 가능한 본문 (상단바 제외) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- 본문 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 레시피 이름 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 이름"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:layout_marginTop="-24dp"
                android:layout_marginStart="80dp" />

            <EditText
                android:id="@+id/editRecipeName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_modern"
                android:hint="레시피 이름을 입력하세요"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/errorRecipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 이름을 입력해주세요."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- 레시피 설명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 설명 *"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editRecipeDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text_modern"
                android:hint="레시피에 대한 간단한 설명을 입력하세요"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:gravity="top"
                android:textSize="14sp"
                android:textColorHint="#9CA3AF"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/errorRecipeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 설명을 입력해주세요."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- 필요한 재료 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필요한 재료 *"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editIngredients"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edit_text_modern"
                android:hint="필요한 재료를 입력하세요&#10;(예: 양파 1개, 당근 1/2개, 감자 2개)"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:gravity="top"
                android:textSize="14sp"
                android:textColorHint="#9CA3AF"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/errorIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필요한 재료를 입력해주세요."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- 소요 시간 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소요 시간 *"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/editCookingTime"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_modern"
                    android:hint="30"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:textColorHint="#9CA3AF"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분"
                        android:textColor="#6B7280"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/errorCookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소요 시간을 올바르게 입력해주세요."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- 난이도 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="난이도 *"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerDifficulty"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_modern"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/errorDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="난이도를 선택해주세요."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- 알레르기 관련 정보 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알레르기 관련 정보 *"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당하는 알레르기 유발 요소를 모두 선택하세요"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:layout_marginBottom="12dp" />

            <!-- 알레르기 체크박스 그리드 -->
            <GridLayout
                android:id="@+id/allergyCheckboxGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_marginBottom="8dp">

                <!-- 알레르기 체크박스들이 동적으로 추가됨 -->
            </GridLayout>

            <TextView
                android:id="@+id/errorAllergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알레르기 관련 정보를 선택해주세요."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- 질병 관련 정보 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질병 관련 정보 *"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당 질병이 있는 분들께 도움이 되는 레시피인지 선택하세요"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:layout_marginBottom="12dp" />

            <!-- 질병 체크박스 그리드 -->
            <GridLayout
                android:id="@+id/diseaseCheckboxGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_marginBottom="8dp">

                <!-- 질병 체크박스들이 동적으로 추가됨 -->
            </GridLayout>

            <TextView
                android:id="@+id/errorDiseases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질병 관련 정보를 선택해주세요."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:layout_marginBottom="32dp"
                android:visibility="gone" />

            <!-- 등록 버튼 -->
            <Button
                android:id="@+id/btnRegisterRecipe"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="레시피 등록"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/button_register"
                android:elevation="4dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>