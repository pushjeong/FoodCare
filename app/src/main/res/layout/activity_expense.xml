<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 고정 바 -->
    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/topbar"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back_button"
                android:contentDescription="뒤로가기"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/topBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가계부"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- 고정된 상단 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 월 선택 UI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/prevMonthButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="이전 달" />

            <TextView
                android:id="@+id/currentMonthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025년 5월"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/nextMonthButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="다음 달" />
        </LinearLayout>

        <!-- 총액 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 달 총 지출"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/totalExpenseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0원"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전월 대비 사용량"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/comparisonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 원형 차트 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:padding="12dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/expensePieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- 추가 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/addExpenseTextView"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:gravity="center"
                android:text="+ 추가"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/rounded_button_background"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 카테고리 리스트 (스크롤 가능) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:overScrollMode="always"
        android:scrollbars="vertical" />
</LinearLayout>