<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:id="@+id/scrollSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/topBarLayout"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@drawable/topbar"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MinEun 님 반가워요!"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:paddingTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/bell"/>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        app:layout_constraintBottom_toTopOf="@+id/imageView"
                        app:layout_constraintEnd_toEndOf="@+id/imageView"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView"
                        app:srcCompat="@drawable/red_circle" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                        app:layout_constraintEnd_toEndOf="@+id/imageView4"
                        app:layout_constraintStart_toStartOf="@+id/imageView4"
                        app:layout_constraintTop_toTopOf="@+id/imageView4" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerPager"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:clipToPadding="true"
                android:clipChildren="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@+id/topBarLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:dotsColor="#D0D0D0"
                app:selectedDotColor="#E8DB6B"
                app:dotsSize="8dp"
                app:dotsSpacing="6dp"
                app:layout_constraintTop_toBottomOf="@+id/bannerPager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <GridLayout
                android:id="@+id/gridButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="4"
                android:padding="16dp"
                android:rowCount="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dots_indicator">

                <!-- Row 1 -->
                <!-- Column 1: 식자재 관리 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnFoodMgmt"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="식자재 관리"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_frige" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="식자재 관리"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Column 2: 식자재레시피 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnFoodRecipe"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="레시피 검색"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_foodsearch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="레시피 검색"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Column 3: 외부검색 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnSearch"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="소비패턴"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_expense_analysis" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="소비패턴"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Column 4: 냉장고 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnFridge"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="가계부"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_expense" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="가계부"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Row 2 -->
                <!-- Column 1: 개인정보 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnInformation"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="개인정보"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_information" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="개인정보"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Column 2: 구성원 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnMember"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="구성원"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_member" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="구성원"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Column 3: 음식검색 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnFoodSearch"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="!!미정"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_community" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="!!!미정"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Column 4: 설정 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnSetting"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="설정"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_butt_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="설정"
                        android:textAlignment="center" />
                </LinearLayout>
            </GridLayout>

            <!-- 추가: 오늘의 추천 식사 섹션 -->
            <TextView
                android:id="@+id/todayMealTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:text="오늘 밥, 이건 어때?"
                android:textColor="#D6C959"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridButtons" />

            <!-- 추천 식사 카드들을 담을 LinearLayout -->
            <LinearLayout
                android:id="@+id/foodRecommendationsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/todayMealTitle"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- 육개장 카드 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/yukgaejangCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- 육개장 이미지 -->
                        <ImageView
                            android:id="@+id/yukgaejangImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:contentDescription="육개장 이미지"
                            android:scaleType="centerCrop"
                            android:src="@drawable/red_circle" />

                        <!-- 오른쪽 텍스트 정보 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/yukgaejangTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="육개장"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/yukgaejangDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="소고기와 나물로 끓인 얼큰한 국물 요리"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/yukgaejangCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="재료: 고사리, 고기 등"
                                android:textColor="#888888"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btnViewYukgaejangRecipe"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:backgroundTint="#3C7A50"
                                android:minWidth="88dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="레시피 보기"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 샤브샤브 카드 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/shabuShabuCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- 샤브샤브 이미지 -->
                        <ImageView
                            android:id="@+id/shabuShabuImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:contentDescription="샤브샤브 이미지"
                            android:scaleType="centerCrop"
                            android:src="@drawable/red_circle" />

                        <!-- 오른쪽 텍스트 정보 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/shabuShabuTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="샤브샤브"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/shabuShabuDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="얇게 썬 고기와 신선한 채소로 만드는 건강한 요리"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/shabuShabuCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="재료: 배추, 소고기 등"
                                android:textColor="#888888"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btnViewShabuShabuRecipe"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:backgroundTint="#3C7A50"
                                android:minWidth="88dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="레시피 보기"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 비빔밥 카드 - 추가 스크롤 시 보임 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/bibimbapCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- 비빔밥 이미지 -->
                        <ImageView
                            android:id="@+id/bibimbapImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:contentDescription="비빔밥 이미지"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dish_img_bibimbap" />

                        <!-- 오른쪽 텍스트 정보 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/bibimbapTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="비빔밥"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bibimbapDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="다양한 나물과 고기를 고추장과 함께 비벼 먹는 한식"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/bibimbapCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="재료: 밥, 고추장, 콩나물 등"
                                android:textColor="#888888"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btnViewBibimbapRecipe"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:backgroundTint="#3C7A50"
                                android:minWidth="88dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="레시피 보기"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 김치찌개 카드 - 추가 스크롤 시 보임 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/kimchiStewCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- 김치찌개 이미지 -->
                        <ImageView
                            android:id="@+id/kimchiStewImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:contentDescription="김치찌개 이미지"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dish_img_kimchi_stew" />

                        <!-- 오른쪽 텍스트 정보 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/kimchiStewTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="김치찌개"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/kimchiStewDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="돼지고기와 김치로 끓인 매콤한 한국 전통 찌개"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/kimchiStewCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="재료: 김치, 돼지고기 등"
                                android:textColor="#888888"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btnViewKimchiStewRecipe"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:backgroundTint="#3C7A50"
                                android:minWidth="88dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:text="레시피 보기"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>